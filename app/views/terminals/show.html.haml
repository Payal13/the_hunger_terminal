
.container
  .row
    .col-md-12
      %h2 Terminal Details
    .col-md-12
      %h2 Menu Items
      .pull-right
        = link_to 'New Menu Item', new_terminal_menu_item_path(@terminal)
      %table.table.table-bordered
        %thead
          %tr
            %th #
            %th Name
            %th Price
            %th Avaibility
            %th Actions
        %tbody
          - @menu_items.each_with_index do |menu_item, index|
            %tr
              %td= index+1
              %td= menu_item.name
              %td= "#{menu_item.price}/-"
              %td= menu_item.visibility ? "Active" : "Inactive"
              %td
                = link_to 'View', terminal_menu_item_path(@terminal, menu_item)
                = link_to 'Edit', edit_terminal_menu_item_path(@terminal, menu_item)
                = link_to 'Delete', terminal_menu_item_path(@terminal, menu_item), method: :delete, data: { confirm: 'Are you sure?' }
      =# paginate @menu_items


