.container
  .row
    .col-md-12
      %h2 Terminals
      .pull-right
        = link_to 'New Terminal', new_terminal_path
      %table.table.table-bordered
        %thead
          %tr
            %th #
            %th name
            %th contact
            %th email
            %th tax
            %th delivery_charge
            %th min_delivery_amount
            %th status
            %th Actions
        %tbody
          - @terminals.each_with_index do |terminal, index|
            %tr
              %td= index+1
              %td= terminal.name
              %td= terminal.landline
              %td= terminal.email
              %td= "#{terminal.tax}%"
              %td= "#{terminal.delivery_charges}/-"
              %td= "#{terminal.minimum_delivery}/-"
              %td= terminal.active ? "Active" : "Inactive"
              %td
                = link_to 'View', terminal_path(terminal)
                = link_to 'Edit', edit_terminal_path(terminal)
                = link_to 'Delete', terminal_path(terminal), method: :delete, data: { confirm: 'Are you sure?' }
      = paginate @terminals


