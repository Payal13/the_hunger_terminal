.container
  .row
    .col-md-4
      %h2 Edit Terminal
      = simple_nested_form_for @terminal, url: terminal_path(@terminal), html: { method: :patch, class: 'form-horizontal' } do |f|
        = f.input :name, require: true
        = f.input :email
        = f.input :landline, required: true
        = f.input :tax, required: true
        = f.input :delivery_charges
        = f.input :minimum_delivery
        = f.input :active, as: :radio_buttons
        = f.fields_for :menu_items do |ff|
          = ff.input :name, required: true
          = ff.input :price, required: true
          = ff.input :visibility, required: true, as: :radio_buttons
          = ff.link_to_remove "Remove this menu item"
        = f.link_to_add "Add a menu item", :menu_items
        = f.button :submit



